%h1 Listing albums

%table.table{'data-sort-url' => sort_albums_path}
  - @albums.each do |album|
    %tr{'data-id' => album.id}
      %td.ncol= album.name
      / %td= album.description
      / %td= album.position
      %td.acol
        %span.btn.btn-xs.btn-default
          %span.glyphicon.glyphicon-sort
        = link_to 'Edit', edit_album_path(album), class: 'btn btn-xs btn-primary'
        = link_to 'Destroy', album, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-xs btn-danger'

= link_to 'New Album', new_album_path, class: 'btn btn-success'
