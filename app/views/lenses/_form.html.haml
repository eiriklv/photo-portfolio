= form_for @len do |f|
  - if @len.errors.any?
    #error_explanation
      %h2= "#{pluralize(@len.errors.count, "error")} prohibited this len from being saved:"
      %ul
        - @len.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
